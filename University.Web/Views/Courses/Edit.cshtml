@model University.Entity.Dto.CourseDto

<h2>Edit Course</h2>

<form asp-action="Update" method="post" asp-route-id="@Model.Id">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CourseName"></label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary padding-md">Save</button>
</form>